{
  "components": [
    {
      "type": "text",
      "text": "# Create Job Profile"
    },
    {
      "type": "text",
      "text": "Finalize the job profile that will be stored in the database. Use the job posting template, eligibility criteria, rating criteria, and ATS checklist as inputs."
    },
    {
      "type": "group",
      "label": "Reference (read-only)",
      "components": [
        {
          "type": "textfield",
          "label": "Company",
          "key": "hiringRequest.company.name"
        },
        {
          "type": "textfield",
          "label": "Job title (request)",
          "key": "hiringRequest.job_opening.job_title"
        },
        {
          "type": "number",
          "label": "Openings",
          "key": "hiringRequest.job_opening.number_of_openings"
        },
        {
          "type": "textfield",
          "label": "Work mode",
          "key": "hiringRequest.job_opening.work_mode"
        },
        {
          "type": "textfield",
          "label": "Employment type",
          "key": "hiringRequest.job_opening.employment_details.job_type"
        }
      ]
    },
    {
      "type": "group",
      "label": "Job profile identity (editable output)",
      "components": [
        {
          "type": "textfield",
          "label": "Internal Job Profile ID",
          "key": "jobProfile.profileId",
          "description": "Example: JP-2026-001 (your internal format)",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Job ID from origin company",
          "key": "jobProfile.externalJobId",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Job title (final)",
          "key": "jobProfile.title",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Department",
          "key": "jobProfile.department",
          "validate": { "required": true }
        }
      ]
    },
    {
      "type": "group",
      "label": "Job posting content (final stored version)",
      "components": [
        {
          "type": "textarea",
          "label": "Posting summary",
          "key": "jobProfile.posting.summary",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Responsibilities",
          "key": "jobProfile.posting.responsibilities",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Requirements",
          "key": "jobProfile.posting.requirements",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Benefits",
          "key": "jobProfile.posting.benefits"
        },
        {
          "type": "textfield",
          "label": "Location (final text)",
          "key": "jobProfile.posting.locationText",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Work mode",
          "key": "jobProfile.posting.workMode",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Employment type",
          "key": "jobProfile.posting.employmentType",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Salary text",
          "key": "jobProfile.posting.salaryText"
        },
        {
          "type": "textarea",
          "label": "How to apply",
          "key": "jobProfile.posting.applyInstructions",
          "validate": { "required": true }
        },
        {
          "type": "checkbox",
          "label": "Ready to publish online",
          "key": "jobProfile.posting.publishOnline"
        }
      ]
    },
    {
      "type": "group",
      "label": "Eligibility & rating (stored references)",
      "components": [
        {
          "type": "textfield",
          "label": "Eligibility minimum legal age",
          "key": "jobProfile.eligibility.minLegalWorkingAge",
          "validate": { "required": true }
        },
        {
          "type": "checkbox",
          "label": "Work authorization required",
          "key": "jobProfile.eligibility.workAuthorizationRequired"
        },
        {
          "type": "textfield",
          "label": "Required education level",
          "key": "jobProfile.eligibility.requiredEducationLevel",
          "validate": { "required": true }
        },
        {
          "type": "number",
          "label": "Minimum years experience",
          "key": "jobProfile.eligibility.minYearsExperience",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Technical prerequisites",
          "key": "jobProfile.eligibility.technicalPrerequisites"
        },
        {
          "type": "textarea",
          "label": "Language requirements",
          "key": "jobProfile.eligibility.languageRequirements"
        },
        {
          "type": "textfield",
          "label": "Rating scoring scale",
          "key": "jobProfile.rating.scoringScale",
          "validate": { "required": true }
        },
        {
          "type": "number",
          "label": "Rating minimum passing score",
          "key": "jobProfile.rating.minimumPassingScore",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Rating weighting method",
          "key": "jobProfile.rating.weightingMethod"
        }
      ]
    },
    {
      "type": "group",
      "label": "ATS checklist reference (stored version)",
      "components": [
        {
          "type": "textfield",
          "label": "ATS checklist name",
          "key": "jobProfile.atsChecklist.name",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "ATS checklist version",
          "key": "jobProfile.atsChecklist.version",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "ATS decision rule",
          "key": "jobProfile.atsChecklist.decisionRule",
          "validate": { "required": true }
        }
      ]
    },
    {
      "type": "group",
      "label": "Database storage info (editable)",
      "components": [
        {
          "type": "textfield",
          "label": "Target database / table (optional text)",
          "key": "jobProfile.storage.target",
          "description": "Example: JobProfiles table"
        },
        {
          "type": "textfield",
          "label": "Storage status",
          "key": "jobProfile.storage.status",
          "description": "Example: READY_TO_STORE",
          "validate": { "required": true }
        }
      ]
    },
    {
      "type": "group",
      "label": "Notes (optional)",
      "components": [
        {
          "type": "textarea",
          "label": "Job profile notes",
          "key": "jobProfile.notes"
        }
      ]
    }
  ],
  "type": "default",
  "id": "create-job-profile",
  "executionPlatform": "Camunda Cloud",
  "executionPlatformVersion": "8.8.0",
  "schemaVersion": 19
}
